<Window x:Class="CookieClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookieClicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.Background>
                <ImageBrush  ImageSource="/background_cookie.png"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Label Content="PXL-Bakery" Name="lblNaam" MouseDown="lblNaam_MouseDown" HorizontalAlignment="Center" Margin="10px 60px 10px 10px"/>
                <TextBox Name="txtBoxLblNaam" Visibility="Collapsed" Margin="10px 60px 10px 10px" KeyDown="txtBoxLblNaam_KeyDown" VerticalAlignment="Top" />
                <Label Name="aantalCookiesTxt" HorizontalAlignment="Center" Margin="10px 80px 10px 10px" />
                <Label Name="aantalPerSeconde" HorizontalAlignment="Center" Margin="10px 100px 10px 10px"/>
                <Image Name="klikebareCookie" Height="200" Width="200" Source="/cookie.png"  MouseDown="MouseDownCookie" MouseUp="MouseUpCookie" MouseEnter="ImageMouseEnter" MouseLeave="ImageMouseLeave"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition  />
                    <RowDefinition  />
                    <RowDefinition  />
                    <RowDefinition  />
                    <RowDefinition  />
                    <RowDefinition  />
                    <RowDefinition  />
                    
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="cookie clicker" />
                <ScrollViewer Grid.Row="1" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Grid.Row="1" Name="GrandmaInvesteringCategorie" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="/grandmabackground.jpg" TileMode="tile" />
                        </Grid.Background>
                    </Grid>
                </ScrollViewer>
                

                <ScrollViewer Grid.Row="2" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Name="FarmInvesteringCategorie" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="/farmbackground.jpg" TileMode="Tile" />
                        </Grid.Background>
                        <!-- Your content for FarmInvesteringCategorie here -->
                    </Grid>
                </ScrollViewer>
                <ScrollViewer Grid.Row="3" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Name="MineInvesteringCategorie" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="/minebackground.jpg" TileMode="tile" />
                        </Grid.Background>
                    </Grid>
                </ScrollViewer>
                <ScrollViewer Grid.Row="4" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Name="FactoryInvesteringCategorie" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="/factorybackground.jpg" TileMode="tile" />
                        </Grid.Background>
                    </Grid>
                </ScrollViewer>
                <ScrollViewer Grid.Row="5" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Name="BankInvesteringCategorie" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="/backgroundBank.jpg" TileMode="tile" />
                        </Grid.Background>
                    </Grid>
                </ScrollViewer>
                <ScrollViewer Grid.Row="6" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Name="TempleInvesteringCategorie" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="/templebackground.jpg" TileMode="tile" />
                        </Grid.Background>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Viewbox Grid.Column="2" Stretch="Fill">
            <Grid Background="lightGreen">
                <StackPanel>
                    <Label HorizontalAlignment="Center">Store</Label>
                    <Label Name="PassiefAantalCookiesTxt" Content=""></Label>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="51.92"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" MouseLeftButtonDown="CursorClicked" Name="BtnInvesteringCursor" MouseEnter="Tooltip" IsEnabled="False" ToolTip="hello"  Background="red">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/cursor.png" Width="35px" Height="35px"></Image>
                            <Grid VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" >Cursor</Label>
                                <Label Name="PrijsCursor" Grid.Row="1">15</Label>
                            </Grid>
                            <Label Name="CursorAantal" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>

                        <Grid Grid.Row="1" Background="yellow" MouseLeftButtonDown="CursorClicked" MouseEnter="Tooltip" Name="BtnInvesteringGrandma">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/grandma.png" Width="35px" Height="35px"></Image>
                            <Grid VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" >Grandma</Label>
                                <Label Name="PrijsGrandma" Grid.Row="1">100</Label>
                            </Grid>
                            <Label Name="GrandmaAantal" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>

                        <Grid Grid.Row="2" Background="orange" MouseLeftButtonDown="CursorClicked" Name="BtnInvesteringFarm" MouseEnter="Tooltip">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="2" Source="/farm.png" Width="35px" Height="35px"></Image>
                            <Grid Grid.Row="2" VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" >Farm</Label>
                                <Label Name="PrijsFarm" Grid.Row="1">1100</Label>
                            </Grid>
                            <Label Name="FarmAantal" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>

                        <Grid Grid.Row="3" Background="LightCoral" MouseLeftButtonDown="CursorClicked" Name="BtnInvesteringMine" MouseEnter="Tooltip">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="3" Source="/mine.png" Width="35px" Height="35px"></Image>
                            <Grid Grid.Row="3" VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="17*"/>
                                    <RowDefinition Height="9*"/>
                                    <RowDefinition Height="26*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Margin="0,0,0,26" Grid.RowSpan="3" >Mine</Label>
                                <Label Name="PrijsMine" Grid.Row="2">12000</Label>
                            </Grid>
                            <Label Name="MineAantal" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>

                        <Grid Grid.Row="4" Background="Pink" MouseLeftButtonDown="CursorClicked" Name="BtnInvesteringFactory" MouseEnter="Tooltip">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="4" Source="/factory.png" Width="35px" Height="35px"></Image>
                            <Grid Grid.Row="4" VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" >Factory</Label>
                                <Label Name="PrijsFactory" Grid.Row="1">130000</Label>
                            </Grid>
                            <Label Name="FactoryAantal" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>

                        <Grid Grid.Row="5" Background="blue" MouseLeftButtonDown="CursorClicked" Name="BtnInvesteringBank" MouseEnter="Tooltip">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="4" Source="/bank.png" Width="35px" Height="35px"></Image>
                            <Grid Grid.Row="4" VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" >Bank</Label>
                                <Label Name="PrijsBank" Grid.Row="1">1400000</Label>
                            </Grid>
                            <Label Name="BankAantal" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>

                        <Grid Grid.Row="6" Background="Brown" MouseLeftButtonDown="CursorClicked" Name="BtnInvesteringTemple" MouseEnter="Tooltip">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="4" Source="/temple.png" Width="35px" Height="35px"></Image>
                            <Grid Grid.Row="4" VerticalAlignment="Center" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" >Temple</Label>
                                <Label Name="PrijsTemple" Grid.Row="1">20000000</Label>
                            </Grid>
                            <Label Name="TempleAantal" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"></Label>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Viewbox>
        
    </Grid>
</Window>
